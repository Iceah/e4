{% extends 'base.html.twig' %}
{% block content %}
    <div id="generale">
        <h2 class="titre_principal"> Fiche élève </h2>
        {% if eleve.avatar is not null %}<img src="{{ eleve.avatar }}" >{% endif %}
        <div class="table table-striped table-bordered table-hover">
            <table>
                <tr>
                    <th colspan="2">Informations générales</th>
                </tr>
                <tr>
                    <td>Prenom</td>
                    <td>{{ eleve.Prenom }}</td>
                </tr><tr>
                    <td>Nom</td>
                    <td>{{ eleve.Nom }}</td>
                </tr>
                <tr>
                    <td>Classe</td>
                    <td>{{ eleve.classe.nom }}</td>
                </tr>
                <tr>
                    <td>Téléphone</td>
                    <td>{{ eleve.Telephone }}</td>
                </tr>
                <tr>
                    <td>Email</td>
                    <td>{{ eleve.email }}</td>
                </tr>
                <tr>
                    <td>Adresse</td>
                    <td>{{ eleve.Adresse1 }}</td>
                </tr>
                <tr>
                    <td>Complément</td>
                    <td>{{ eleve.Adresse2 }}</td>
                </tr>
                <tr>
                    <td>Code postale</td>
                    <td>{{ eleve.Cp }}</td>
                </tr>
                <tr>
                    <td>Ville</td>
                    <td>{{ eleve.Ville }}</td>
                </tr>
            </table>
        </div>
    </div>
{% endblock %}