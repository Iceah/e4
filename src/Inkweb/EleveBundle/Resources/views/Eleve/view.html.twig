{% extends 'base.html.twig' %}
{% block content %}
    <div id="generale">
        <h2 class="titre_principal"> Fiche élève </h2>
        {% if eleve.avatar is not null %}<img src="{{ eleve.avatar }}" >{% endif %}
        <div class="table table-striped table-bordered table-hover">
            <table>
                <tr>
                    <th colspan="2">Informations générales</th>
                </tr>
                <tr>
                    <td>Prenom</td>
                    <td>{{ eleve.Prenom }}</td>
                </tr>
                <tr>
                    <td>Nom</td>
                    <td>{{ eleve.Nom }}</td>
                </tr>
                <tr>
                    <td>Classe</td>
                    <td>{{ eleve.classe.nom }}</td>
                </tr>
                <tr>
                    <td>Téléphone</td>
                    <td>{{ eleve.Telephone }}</td>
                </tr>
                <tr>
                    <td>Email</td>
                    <td>{{ eleve.email }}</td>
                </tr>
                <tr>
                    <td>Adresse</td>
                    <td>{{ eleve.Adresse1 }}</td>
                </tr>
                <tr>
                    <td>Complément</td>
                    <td>{{ eleve.Adresse2 }}</td>
                </tr>
                <tr>
                    <td>Code postale</td>
                    <td>{{ eleve.Cp }}</td>
                </tr>
                <tr>
                    <td>Ville</td>
                    <td>{{ eleve.Ville }}</td>
                </tr>
            </table>
        </div>

        <div class="table-responsive col-md-6">
            <table class="table table-striped">
                <tr>
                <th>Module</th>
                </tr>
                {% for module in modules %}
                    <tr>
                        <td>{{ module.NomMat }}</td>
                    </tr>
                {% endfor %}
            </table>
        </div>
        <div class="table-responsive col-md-6">
            <table class="table table-striped" id="notes_tab">
                <tr>
                <th>Notes</th>
                <th>Moyenne</th>
                </tr>
                {% for module in list_notes_module %}
                    <tr>
                        {% if module.notes is empty %}
                            <td colspan="2" style="text-align: center;">Non évalué</td>
                        {% else %}
                            <td>
                                {% for note in module.notes %}
                                    {{ note.Note }}
                                {% endfor %}
                            </td>
                            <td>
                                {% for moyenne in module.moyenne.0 %}
                                    {{ moyenne|round(2,'floor') }}
                                {% endfor %}
                            </td>
                        {% endif %}
                    </tr>
                {% endfor %}
            </table>
        </div>


    </div>
{% endblock %}