{% extends 'base.html.twig' %}
{% block content %}
    <h1>Ajouter un cours</h1>
    <div class="well">
    {{ form_start(form) }}
        {{ form_errors(form) }}
        <div class="form-group">
            {{ form_label(form.date, "Date du cours", {'label_attr': {'class': 'col-xs-6 control-label'}}) }}
            {{ form_errors(form.date) }}
            <div class="col-xs-6">
                {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.heure, "Heure de début", {'label_attr': {'class': 'col-xs-6 control-label'}}) }}
            {{ form_errors(form.heure) }}
            <div class="col-xs-6">
                {{ form_widget(form.heure, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.duree, "Durée du cours (en heures)", {'label_attr': {'class': 'col-xs-6 control-label'}}) }}
            {{ form_errors(form.duree) }}
            <div class="col-xs-6">
                {{ form_widget(form.duree, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.module, "Module concerné", {'label_attr': {'class': 'col-xs-6 control-label'}}) }}
            {{ form_errors(form.module) }}
            <div class="col-xs-6">
                {{ form_widget(form.module, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        {{ form_row(form.date) }}
        {{ form_row(form.heure) }}
        {{ form_row(form.duree) }}
        {{ form_row(form.module) }}
        {{ form_widget(form.Enregistrer, {'attr': {'class': 'btn btn-primary'}}) }}
        {{ form_rest(form) }}
        {{ form_end(form) }}
    </div>
{%  endblock %}