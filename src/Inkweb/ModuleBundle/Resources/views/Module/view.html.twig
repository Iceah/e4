{% extends 'base.html.twig' %}
{%  block content %}
    <h1>{{ module.NomMat }}</h1>
    {# Liste des classes #}
    <a href="{{ path('inkweb_module_add',{'id': module.Id } )}}"><button type="button" class="btn btn-primary">Ajouter un cours</button></a>
    <a href="{{ path('inkweb_module_addeval',{'id': module.Id } )}}"><button type="button" class="btn btn-primary">Ajouter une évaluation</button></a>
    <br />
    <div class="table table-striped table-bordered table-hover">
    <table>
        <tr>
            <th colspan="2"><h3>Prochains cours</h3></th>
        </tr>
        {% for cours in list_cours %}
        <tr>
            <td>{{ cours.Heure|date('H:i') }}</td>
            <td>{{ cours.Classe.Nom }}</td>
        </tr>
        <tr>
            <td>Date : {{ cours.Date|date("d/m") }}</td>
            <td>Durée: {{ cours.Duree }} heure(s)</td>
        </tr>
    {% endfor %}
    </table>
    <br />
    <table>
        <tr>
            <th colspan="2"><h3>Evaluations pour le module</h3></th>
        </tr>
        <tr></tr>
    </table>
{%  endblock %}